{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,           
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@/*": [
        "./*"
      ],
      "*": [
          "node_modules/*",
          "src/types/*"
      ]
    }
  },
  "lib": [
    "es6"
  ],
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", ".vscode", "dist"]
}